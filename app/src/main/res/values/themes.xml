<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- use the Android Light theme as the base for our own theme -->
    <style name="MySuperTheme" parent="@style/Theme.AppCompat.Light">

        <!-- hide the Window Title -->
        <item name="android:windowNoTitle">true</item>
        <!--   <item name="android:windowFullscreen">true</item>-->

        <!-- You could change the scrollbar, checkbox style, anything! -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="bookMarkThemen" parent="android:Theme.Material.Dialog" tools:targetApi="lollipop">
        <item name="android:headerBackground">@color/cardview_light_background</item>
        <item name="android:windowTitleBackgroundStyle">@color/cardview_light_background</item>
        <item name="title">"סימניות"</item>
        <item name="android:windowNoTitle">true</item>
        <item name="headerLayout">@color/cardview_light_background</item>
        <item name="android:background">@color/design_default_color_primary</item>
    </style>

    <style name="mAppCompatLight" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/mActionbar</item>
    </style>
    <style name="mAppCompatDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:actionBarStyle">@style/mActionbardark</item>
    </style>

    <style name="mActionbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/app_theme_color</item>
    </style>
    <style name="mActionbardark" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="mSettingTheme" parent="Theme.AppCompat.DayNight">

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
